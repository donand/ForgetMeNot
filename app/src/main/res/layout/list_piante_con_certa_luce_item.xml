<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview_tempo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/immagine"
    android:layout_marginTop="10dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="2dp">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="7dp"
        android:gravity="left"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:id="@+id/fotoPianta"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="15dp"
            />


            <TextView
                android:id="@+id/nomePianta"
                android:layout_width="wrap_content"
                android:layout_height="98dp"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/fotoPianta"
                android:text="Primula"
                android:textSize="20dp"
                android:textStyle="bold" />


                <ImageButton
                    android:id="@+id/info"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_gravity="center_vertical|right"
                    android:layout_toRightOf="@+id/nomePianta"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/info" />

            </LinearLayout>


</android.support.v7.widget.CardView>
